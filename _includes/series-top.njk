{% set seriesPostDatas = collections.all | attr("data") | selectAttrEquals("series", series) | sort(false, false, "seriesOrder") %}

{# Only show this navigator if > 1 post in the series #}
{% if seriesPostDatas | length > 1 %}

<div class="mb3 alt-bg">
    <div class="mw7 center tl ph3 ph4-ns pv4 pv5-l normal-links">
        <p class="b ttu tracked lh-solid mt1 f4">
            {{ series }} series
        </p>

        <ol class="ma0 f5">
            {% for seriesPostData in seriesPostDatas %}
                <li class="">
                    {% if seriesPostData.title == title %}
                        <span class="b">
                            {{ seriesPostData.title }}
                        </span>
                    {% else %}
                        <a href="{{ seriesPostData.page.url | url }}" class="db pv1">
                            {{ seriesPostData.title }}
                        </a>
                    {% endif %}
                </li>
            {% endfor %}
        </ol>
    </div>
</div>

{% endif %}
