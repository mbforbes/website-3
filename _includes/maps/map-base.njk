<link href='{{ "/assets/css/leaflet.css" | url }}' rel='stylesheet' type='text/css'/>
<link href='{{ "/assets/css/maps.css" | url }}' rel='stylesheet' type='text/css'/>

<script type="text/javascript" src="/assets/lib/leaflet-1.9.3.min.js" defer></script>
<script type="text/javascript" src="/assets/lib/tile.stamen-1.3.0.js" defer></script>
<script type="text/javascript" src="/assets/lib/leaflet.curve-0.9.1.min.js" defer></script>
<script type="text/javascript" src="/assets/lib/anime-3.2.1.min.js" defer></script>

{% block setupScript %}{% endblock %}
<script src="/assets/js/maps-common.js" defer></script>

<div class="full-width cb flex flex-wrap flex-nowrap-ns justify-center fig mb0 pv5 fade-bg">
    <div class="ph3 pb4 pb3-l w-100 w-auto-ns mw-50-ns">
        <div class="relative">
            <div id="mapContext" class="leafletMap bg-white mapSmall center">
                {% block contextPreview %}{% endblock %}
            </div>
            {% block contextOverlay %}{% endblock %}
        </div>
    </div>
    <div class="ph3 w-100 w-auto-ns mw-50-ns">
        <div id="mapTrip" class="leafletMap bg-white mapSmall center">
            {% block tripPreview %}{% endblock %}
        </div>
    </div>
</div>
