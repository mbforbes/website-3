<h2>Latest from the studio</h2>

<ul class="list pa0">
    {% set writingTags = ["creating & thinking", "design", "health", "programming"] %}
    {% for post in collections.studio | rejectAttrContains(["data", "tags"], "software") | head(3) %}
    <li class="mv2">
      <a href="{{ post.url }}" class="db pv1 link">
        <time class="fr silver ttu ml3">{{ post.date | readableDate }} </time>
        {{ post.data.title }}
      </a>
    </li>
  {% endfor %}
</ul>

<p class="tr f6 f5-ns gray mt1">
... see more in the
<a class="b" href="{{ "/studio/" | url }}">Studio</a>
</p>


<h2>Latest research</h2>

<ul class="list pa0">
{% for post in collections.research | rejectAttrContains(["data", "tags"], "software") | sort(true, false, "date") | head(3) %}
    <li class="mv2">
        {% if "news" in post.data.tags %}
            <span class="db pv1">
                <time class="fr silver ttu ml3">{{ post.date | readableDate }} </time>
                {{ post.templateContent | replace("<p>", "") | replace("</p>", "") | safe }}
            </span>
        {% else %}
            <a href="{{ post.url | url }}" class="db pv1 link">
                <time class="fr silver ttu ml3">{{ post.date | readableDate }} </time>
                {{ post.data.title }}
            </a>
        {% endif %}
    </li>
{% endfor %}
</ul>

<p class="tr f6 f5-ns gray mt1">
... see more in
<a class="b" href="{{ "/research/" | url }}">Research</a>
</p>
